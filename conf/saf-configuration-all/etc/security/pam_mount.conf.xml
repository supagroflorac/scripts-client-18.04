<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE pam_mount SYSTEM "pam_mount.conf.xml.dtd">

<pam_mount>
    <debug enable="0" />

    <!-- Volume definitions -->
    <!--home-->
    <volume
        options="acl,iocharset=utf8,vers=1.0,x-gvfs-show"
        user="*"
        mountpoint="~/Reseau/Perso"
        path="%(USER)"
        server="serveur.cdrflorac.fr"
        fstype="cifs"
    />
    <!--SupAgro-->
    <volume
        options="acl,iocharset=utf8,vers=1.0,x-gvfs-show"
        user="*"
        mountpoint="~/Reseau/Activites"
        path="Activites"
        server="serveur.cdrflorac.fr"
        fstype="cifs" />

    <!--Stages-->
    <volume
        options="acl,iocharset=utf8,vers=1.0,x-gvfs-show"
        user="*"
        mountpoint="~/Reseau/Stagiaires"
        path="Stagiaires"
        server="serveur.cdrflorac.fr"
        fstype="cifs"
    />
    <!--Ressources-->
    <volume
        options="acl,iocharset=utf8,vers=1.0,x-gvfs-show"
        user="*"
        mountpoint="~/Reseau/Ressources"
        path="Ressources"
        server="serveur.cdrflorac.fr"
        fstype="cifs"
    />

    <!-- pam_mount parameters: General tunables -->
    <mntoptions allow="nosuid,nodev,loop,encryption,fsck,nonempty,allow_root,allow_other" />
    <mntoptions require="nosuid,nodev" />
    <logout wait="0" hup="0" term="0" kill="0" />
    <mkmountpoint enable="1" remove="true" />
</pam_mount>
